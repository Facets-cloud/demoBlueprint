{
  "$schema": "https://facets-cloud.github.io/facets-schemas/schemas/log_collector/log_collector.schema.json",
  "flavor": "loki_blob",
  "metadata": {
    "name": "loki"
  },
  "advanced": {
    "loki_blob": {
      "container_name": "${azure_storage_container.loki-storage.out.attributes.container_name}",
      "storage_account_name": "${azure_storage_container.loki-storage.out.attributes.storage_account_name}",
      "primary_access_key": "${azure_storage_container.loki-storage.out.attributes.primary_access_key}"
    }
  },
  "kind": "log_collector",
  "provided": false,
  "disabled": false,
  "version": "0.1",
  "spec": {
    "retentation_days": 90,
    "storage_size": "100"
  }
}