{
  "flavor": "default",
  "metadata": {
    "name": "opa-service"
  },
  "advanced": {
    "common": {
      "app_chart": {
        "values": {
          "security_context": {
            "fsgroup": 1000,
            "run_as_user": 1000,
            "run_as_group": 1000
          }
        }
      }
    }
  },
  "kind": "service",
  "disabled": true,
  "version": "0.1",
  "spec": {
    "type": "statefulset",
    "enable_host_anti_affinity": false,
    "restart_policy": "OnFailure",
    "release": {
      "image": "openpolicyagent/opa:0.63.0-debug",
      "strategy": {
        "type": "RollingUpdate"
      }
    },
    "runtime": {
      "size": {
        "cpu": "50m",
        "memory": "249Mi"
      },
      "health_checks": {
        "period": 12,
        "port": 8181,
        "timeout": 60,
        "start_up_time": 10
      },
      "autoscaling": {
        "cpu_threshold": 50,
        "max": 2,
        "min": 1
      },
      "ports": {
        "http": {
          "protocol": "tcp",
          "port": "8181"
        }
      },
      "args": [
        "run",
        "--server",
        "--addr",
        ":8181",
        "--set",
        "storage.disk.directory=/var/opa"
      ]
    },
    "env": {}
  }
}