{
  "flavor": "k8s",
  "metadata": {
    "name": "canary-service",
    "labels": {
      "sidecar.istio.io/inject": "true"
    }
  },
  "advanced": {
    "common": {
      "app_chart": {
        "values": {
          "additional_k8s_objects": {
            "destination_rule": {
              "apiVersion": "networking.istio.io/v1alpha3",
              "kind": "DestinationRule",
              "metadata": {
                "name": "canary-service"
              },
              "spec": {
                "host": "canary-service",
                "subsets": [
                  {
                    "name": "canary",
                    "labels": {
                      "app": "canary-service"
                    }
                  },
                  {
                    "name": "stable",
                    "labels": {
                      "app": "canary-service"
                    }
                  }
                ]
              }
            },
            "virtual_service": {
              "apiVersion": "networking.istio.io/v1alpha3",
              "kind": "VirtualService",
              "metadata": {
                "name": "virtualservice-canary"
              },
              "spec": {
                "hosts": [
                  "canary.main-azure-demo-bp-azure-child.console.facets.cloud/",
                  "canary-service.default.svc.cluster.local"
                ],
                "http": [
                  {
                    "name": "primary",
                    "route": [
                      {
                        "destination": {
                          "host": "canary-service",
                          "subset": "stable"
                        },
                        "weight": 90
                      },
                      {
                        "destination": {
                          "host": "canary-service",
                          "subset": "canary"
                        },
                        "weight": 10
                      }
                    ]
                  }
                ]
              }
            }
          }
        }
      }
    }
  },
  "kind": "service",
  "disabled": false,
  "version": "0.1",
  "spec": {
    "type": "application",
    "enable_host_anti_affinity": false,
    "restart_policy": "OnFailure",
    "release": {
      "image": "hashicorp/http-echo:latest",
      "strategy": {
        "type": "Canary",
        "canary_strategy": {
          "enable_service": false,
          "steps": [
            {
              "setWeight": 10
            },
            {
              "pause": {}
            }
          ],
          "traffic_routing": {
            "istio": {
              "destinationRule": {
                "name": "canary-service",
                "canarySubsetName": "canary",
                "stableSubsetName": "stable"
              },
              "virtualService": {
                "name": "virtualservice-canary",
                "routes": [
                  "primary"
                ]
              }
            }
          }
        }
      },
      "build": {
        "artifactory": "NA",
        "name": "NA"
      }
    },
    "runtime": {
      "size": {
        "cpu": "10m",
        "memory": "50Mi"
      },
      "health_checks": {
        "period": 10,
        "port": "5678",
        "timeout": 60,
        "start_up_time": 10
      },
      "autoscaling": {
        "cpu_threshold": 50,
        "max": 10,
        "min": 5
      },
      "ports": {
        "http": {
          "protocol": "tcp",
          "port": "5678",
          "test": 1,
          "test2": 2
        }
      },
      "args": [
        "-text=hello-world-v1"
      ]
    },
    "env": {
      "log": "asdarrqwe1111"
    }
  }
}